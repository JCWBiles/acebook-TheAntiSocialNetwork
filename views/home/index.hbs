  <script src='https://code.jquery.com/jquery-2.2.4.min.js'></script>
  <script>
    {{!-- JS for clock --}}
    var div = document.getElementById('curr_time'); 
    function time() {
    div.innerHTML = "";
    var d = new Date();
    var s = d.getSeconds();
    var m = d.getMinutes();
    var h = d.getHours();

    h = (h < 10) ? "0" + h : h;
    m = (m < 10) ? "0" + m : m;
    s = (s < 10) ? "0" + s : s;

    div.innerHTML = h + ":" + m + ":" + s;
  }

  setInterval(time, 1000); 

  {{!-- JS for login alerts --}}
  function social_alert1() {
      alert ("Are you sure you want to be social?");
    };

    function social_alert2() {
      alert ("Are you really sure you want to be social?");
